datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  createdAt DateTime? @default(now())
}

model TimeSheet {
  id            String      @id @default(cuid())
  labourTime    Int?
  jobNumber     JobNumber[] @relation("TimeSheet_jobNumber")
  employee      Employee?   @relation("TimeSheet_employee", fields: [employeeId], references: [id])
  employeeId    String?     @map("employee")
  description   String      @default("")
  costCode      CostCode[]  @relation("TimeSheet_costCode")
  submitStatus  String?
  timeSheetDate String?     @unique

  @@index([employeeId])
}

model Employee {
  id        String      @id @default(cuid())
  firstName String      @default("")
  LastName  String      @default("")
  password  String      @default("")
  timeSheet TimeSheet[] @relation("TimeSheet_employee")
}

model CostCode {
  id                        String      @id @default(cuid())
  productionCode            String      @default("")
  productionCodeDescription String      @default("")
  from_TimeSheet_costCode   TimeSheet[] @relation("TimeSheet_costCode")
}

model JobNumber {
  id                       String      @id @default(cuid())
  jobNumber                String      @default("")
  from_TimeSheet_jobNumber TimeSheet[] @relation("TimeSheet_jobNumber")
}

model TimeClock {
  id        String    @id @default(cuid())
  timeStamp DateTime?
  timeIn    String    @default("")
  timeOut   String    @default("")
}
