datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id            String    @id @default(cuid())
  isSystemAdmin Boolean   @default(false)
  name          String    @default("")
  email         String    @unique @default("")
  password      String
  createdAt     DateTime? @default(now())
}

model TimeSheet {
  id            String      @id @default(cuid())
  labourTime    Int?
  jobNumbers    JobNumber[] @relation("TimeSheet_jobNumbers")
  employee      Employee?   @relation("TimeSheet_employee", fields: [employeeId], references: [id])
  employeeId    String?     @map("employee")
  description   String      @default("")
  costCodes     CostCode[]  @relation("TimeSheet_costCodes")
  submitStatus  String?
  timeSheetDate String?     @unique

  @@index([employeeId])
}

model Employee {
  id         String      @id @default(cuid())
  firstName  String      @default("")
  LastName   String      @default("")
  password   String      @default("")
  isAdmin    Boolean     @default(false)
  timeSheets TimeSheet[] @relation("TimeSheet_employee")
}

model CostCode {
  id                        String      @id @default(cuid())
  productionCode            String      @default("")
  productionCodeDescription String      @default("")
  from_TimeSheet_costCodes  TimeSheet[] @relation("TimeSheet_costCodes")
}

model JobNumber {
  id                        String      @id @default(cuid())
  jobNumber                 String      @default("")
  from_TimeSheet_jobNumbers TimeSheet[] @relation("TimeSheet_jobNumbers")
}

model TimeClock {
  id        String    @id @default(cuid())
  timeStamp DateTime?
  timeIn    String    @default("")
  timeOut   String    @default("")
}
